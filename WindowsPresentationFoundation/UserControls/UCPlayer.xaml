<UserControl x:Class="WindowsPresentationFoundation.UserControls.UCPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"              
             xmlns:local="clr-namespace:WindowsPresentationFoundation.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="100">
    <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Ellipse 
            Margin="0,15,0,0"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Width="30"
            Height="30"
            Fill="Blue"
            Stroke="Black"
            StrokeThickness="1"
            Canvas.Left="135"
            Canvas.Top="100"/>
        
        <Label
            Margin="0,15,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            x:Name="lblShirtNumber" 
            FontSize="20"
            Foreground="White"
            Content="00"/>
        
        <Label 
            Grid.Row="1"
            Grid.ColumnSpan="2"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            x:Name="lblPlayer" 
            FontSize="10"
            Foreground="White"
            Margin="0,-11,0,15"
            Content="playerName"/>
    </Grid>
</UserControl>
